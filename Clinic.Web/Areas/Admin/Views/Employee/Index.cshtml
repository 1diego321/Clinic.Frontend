@model Clinic.Domain.Models.ViewModels.Admin.Employee.EmployeeListViewModel
@{
    ViewData["Title"] = "Listado de Empleados";
}

@if (TempData["EmployeeMessage"] != null)
{
    <div class="alert alert-dismissible fade show alert-success mb-3" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="alert-heading">Exito!</h4>
        <p class="mb-0">@TempData["EmployeeMessage"].ToString()</p>
    </div>

}

<div class="border">
    <h1 class="text-info text-center mt-2">Listado de Empleados</h1>
    <div class="col-sm-12">
        <form method="get" class="row" id="frmSearch">
            @Html.AntiForgeryToken()
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="QueryFilters.Identification"></label>
                    <input asp-for="QueryFilters.Identification" id="identification" class="form-control" />
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="QueryFilters.EmployeeStatus"></label>
                    @Html.DropDownList(nameof(Model.QueryFilters.EmployeeStatus), Model.SelectListEmployeeStatus, "Todos", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3 mb-3">
                <input type="submit" value="Buscar" class="btn btn-outline-primary btn-block form-control" />
            </div>
        </form>
    </div>
    <div class="col-sm-12" id="tblEmployees">
        @{ await Html.RenderPartialAsync("_EmployeePagedTablePartial", Model); }
    </div>
</div>

@section Scripts{
    <script src="~/js/employee.js"></script>
}

