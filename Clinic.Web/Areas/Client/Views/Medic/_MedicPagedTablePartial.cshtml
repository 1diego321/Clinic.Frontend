@model Clinic.Domain.Models.ViewModels.Client.Medic.MedicIndexViewModel

<div class="row">
    <div class="col-12">
        <table class="table table-sm table-bordered table-hover table-responsive-sm table-responsive-md">
            <thead>
                <tr>
                    <th>Identificación</th>
                    <th>Nombre Completo</th>
                    <th>Especialidad</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Metadata.TotalCount > 0)
                {
                    @foreach (var med in Model.Medics)
                    {
                        <tr class="border">

                            <input type="hidden" name="hdId" value="@med.Id" />

                            <td>@med.Identification</td>
                            <td>@med.FullName</td>
                            <td>@med.MedicalSpecialtyName</td>
                            <td>
                                <div class="row">
                                    <div class="col-xl-12">
                                        <a asp-area="Client" asp-controller="Medic" asp-action="Edit" asp-route-id="@med.Id" class="btn btn-success btn-block btn-sm">Editar</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center"><span class="text-danger">No hay datos disponibles.</span></td>
                    </tr>
                }
            </tbody>
        </table>
        @{ await Html.RenderPartialAsync("_PaginationButtonsPartial"); }
    </div>
</div>

